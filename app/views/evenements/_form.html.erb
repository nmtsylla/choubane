<%= simple_form_for(@evenement) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :titre %>
    <%= f.input :date_event %>
    <%= f.input :lieu %>
    <%= f.input :details %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
