<%- model_class = Audio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:user_id) %></dt>
      <dd><pre class="prettyprint"><%= @audio.user_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:author) %></dt>
      <dd><pre class="prettyprint"><%= @audio.author %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:date) %></dt>
      <dd><pre class="prettyprint"><%= @audio.date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:image) %></dt>
      <dd><%= image_tag @audio.image.url(:thumb) %></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:piste) %></dt>
      <dd><pre class="prettyprint"><%= @audio.piste_file_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:categorie_audio) %></dt>
      <dd><pre class="prettyprint"><%= @audio.categorie_audio.name %></pre></dd>

  </dl>
  <% if @audio.piste_file_name %>
    <%= render partial: 'audios/unique_player' %>
  <% end %>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              audios_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_audio_path(@audio), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              audio_path(@audio),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>